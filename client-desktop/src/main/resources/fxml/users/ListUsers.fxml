<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0"
            prefWidth="1000.0"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            stylesheets="@../../styles/Styles.css"
            xmlns="http://javafx.com/javafx/12.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projeto.integrador.clientdesktop.controllers.users.ListUsersController">

  <left>
    <fx:include source="../shared/Menu.fxml"/>
  </left>

  <center>
    <VBox spacing="20.0">
      <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
      </padding>

      <HBox styleClass="header-view">
        <Label text="Usuários" styleClass="label-header"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="createUserButton" onAction="#goToCreate" styleClass="button-primary" text="Adicionar"/>
      </HBox>

      <TableView fx:id="usersTable">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
          <TableColumn fx:id="nameColumn" text="Nome"></TableColumn>
          <TableColumn fx:id="usernameColumn" text="Usuário"></TableColumn>
          <TableColumn fx:id="emailColumn" text="E-mail"></TableColumn>
          <TableColumn fx:id="actionsColumn" text="Ações"></TableColumn>
        </columns>
      </TableView>
    </VBox>
  </center>

</BorderPane>
