<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0"
            prefWidth="1000.0"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            stylesheets="@../../styles/Styles.css"
            xmlns="http://javafx.com/javafx/12.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projeto.integrador.clientdesktop.controllers.colors.ListColorsController">

  <left>
    <fx:include source="../shared/Menu.fxml"/>
  </left>

  <center>
    <ScrollPane styleClass="scroll-pane" fitToHeight="true" fitToWidth="true">
      <content>
        <VBox spacing="20.0">
          <padding>
            <Insets top="20" bottom="20" left="20" right="20" />
          </padding>

          <HBox styleClass="header-view">
            <Label text="Cores" styleClass="label-header"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="createColorButton" onAction="#goToCreate" styleClass="button-primary" text="Adicionar"/>
          </HBox>

          <VBox fx:id="colorsList" spacing="10.0">
            <children>
            </children>
          </VBox>
        </VBox>
      </content>
    </ScrollPane>
  </center>

</BorderPane>
