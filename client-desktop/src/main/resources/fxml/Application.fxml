<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="600.0"
            prefWidth="1000.0"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            stylesheets="@../styles/Styles.css"
            xmlns="http://javafx.com/javafx/12.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projeto.integrador.clientdesktop.controllers.ApplicationController">

  <left>
    <VBox prefHeight="600.0"
      prefWidth="100.0"
      spacing="0.0"
      alignment="TOP_CENTER"
      styleClass="sidebar-menu">

      <children>
        <Button onAction="#goToProjects" text="Projetos" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-project-diagram" iconSize="20"/>
            </graphic>
          </Button>
          <Button onAction="#goToMaterials" text="Materiais" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-puzzle-piece" iconSize="20"/>
            </graphic>
          </Button>
          <Button onAction="#goToCategories" text="Categorias" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-tags" iconSize="20"/>
            </graphic>
          </Button>
          <Button onAction="#goToAudits" text="Histórico" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-book" iconSize="20"/>
            </graphic>
          </Button>
          <Button onAction="#goToSettings" text="Opções" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-cogs" iconSize="20"/>
            </graphic>
          </Button>
          <Button onAction="#goToUsers" text="Usuários" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-users" iconSize="20"/>
            </graphic>
          </Button>
          <Button onAction="#logout" text="Sair" textAlignment="CENTER" contentDisplay="TOP">
            <graphic>
              <FontIcon iconLiteral="fas-sign-out-alt" iconSize="20"/>
            </graphic>
          </Button>
      </children>
    </VBox>
  </left>

  <center>
    <AnchorPane fx:id="rootAnchorPane" prefHeight="600.0" prefWidth="900.0" maxHeight="-Infinity" maxWidth="-Infinity">
      <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" maxHeight="-Infinity" maxWidth="-Infinity">
          <children>
            <ImageView fitHeight="240.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/logo.png"/>
              </image>
            </ImageView>
          </children>
        </VBox>
      </children>
    </AnchorPane>
  </center>

</BorderPane>

