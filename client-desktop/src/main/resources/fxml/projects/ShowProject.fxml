<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="600.0"
            prefWidth="1000.0"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            stylesheets="@../../styles/Styles.css"
            xmlns="http://javafx.com/javafx/12.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projeto.integrador.clientdesktop.controllers.projects.ShowProjectController">

  <left>
    <fx:include source="../shared/Menu.fxml"/>
  </left>

  <center>
    <VBox spacing="20.0">
      <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
      </padding>

      <HBox styleClass="header-view">
        <Label text="Projeto" styleClass="label-header"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <HBox spacing="5.0">
          <Button onAction="#goToUpdate" text="Alterar" styleClass="button-success"/>
          <Button onAction="#delete" text="Excluir" styleClass="button-danger"/>
          <Button onAction="#goToBack" text="Voltar"/>
        </HBox>
      </HBox>

      <VBox spacing="2.0">
        <children>
          <Label text="Nome"/>
          <Label fx:id="nameLabel" text="Nome do Projeto" styleClass="label-h6"/>
        </children>
      </VBox>

      <VBox spacing="2.0">
        <children>
          <Label text="Índice de Radiação"/>
          <Label fx:id="solarRadiationLabel" text="Índice de Radiação" styleClass="label-h6"/>
        </children>
      </VBox>

      <BorderPane>
        <left>
          <HBox spacing="5.0">
            <padding>
              <Insets top="0" bottom="0" left="0" right="20" />
            </padding>

            <Label text="Cômodos" styleClass="label-h6"/>

            <Button onAction="#createRoom" styleClass="button-sm">
              <graphic>
                <FontIcon iconLiteral="fas-plus"/>
              </graphic>
            </Button>
          </HBox>
        </left>

        <center>
          <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
              <VBox fx:id="roomsList" spacing="5.0">
                <children>
                </children>
              </VBox>
            </content>
          </ScrollPane>
        </center>
      </BorderPane>
    </VBox>
  </center>

</BorderPane>
